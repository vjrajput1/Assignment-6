<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit {{viewData.student.firstName}} {{viewData.student.lastName}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <br>
                <h2>Edit {{viewData.student.firstName}} {{viewData.student.lastName}}</h2>
                <hr />
                <form action="/student/update" method="POST">
                    <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}">

                    <!-- Personal Information Fields -->
                    <fieldset>
                        <legend>Personal Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>First Name:</label>
                                    <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Last Name:</label>
                                    <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Email:</label>
                                    <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Address (Street):</label>
                                    <input class="form-control" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Address (City):</label>
                                    <input class="form-control" name="addressCity" type="text" value="{{viewData.student.addressCity}}" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Address (Province):</label>
                                    <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" required />
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Academic Information Fields -->
                    <fieldset>
                        <legend>Academic Information</legend>
                        <div class="row">
                            <div class="col-md-4">
                                <label>College Employment:</label><br />
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="TA" name="TA" {{#if viewData.student.TA}}checked{{/if}}>
                                    <label class="form-check-label" for="TA">Teaching Assistant</label>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Enrollment Status:</label><br />
                                    <label class="checkbox-inline">
                                        <input type="radio" value="Full Time" name="status" {{#if (eq viewData.student.status "Full Time")}}checked{{/if}} required /> Full Time
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="radio" value="Part Time" name="status" {{#if (eq viewData.student.status "Part Time")}}checked{{/if}} required /> Part Time
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="course">Enrolled in Course:</label>
                                    <select class="form-control" id="course" name="course" required>
                                        <option value="">Select Course</option>
                                        {{#each courses}}
                                            <option value="{{this.courseId}}" {{#if (eq this.courseId student.course)}}selected{{/if}}>{{this.courseCode}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <hr />
                    <button type="submit" class="btn btn-primary">Update Student</button>
                </form>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
