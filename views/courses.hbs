<div class="row">
    <div class="col-md-12">
        <br>
        <div class="d-flex justify-content-between align-items-center">
            <h2>Courses</h2>
            <a href="/courses/add" class="btn btn-success">Add New Course</a>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- Empty header for the Remove button -->
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                        <tr>
                            <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                            <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                            <td>
                                <a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{#unless courses.length}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>

